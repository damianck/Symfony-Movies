{% extends "ShopMainBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="span12">
            <div class="" id="loginModal">
                <div class="modal-header">
                    {#<button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location.href='{{ path('shop_main_homepage') }}'">×</button>#}
                    <h3>Posiadasz konto?</h3>
                </div>
                <div class="modal-body">
                    <div class="well">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="" data-toggle="tab">Logowanie</a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}" data-toggle="tab">Rejestracja</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane active in" id="login">
                                <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                                    <br>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="username">Login:</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Login">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="password">Hasło:</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Hasło">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <div class="checkbox">
                                                <label><input type="checkbox"  id="remember_me" name="_remember_me" value="on" > Zapamiętaj mnie</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-5 col-sm-0 ">
                                            {% if error %}
                                                <div class="has-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-default">Zaloguj</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}