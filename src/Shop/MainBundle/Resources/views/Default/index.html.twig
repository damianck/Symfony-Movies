{% extends 'ShopMainBundle::layout.html.twig' %}

{% block content %}
	<body style="margin-bottom: 90px;">


	<div class="container">

		<div class="row row-offcanvas row-offcanvas-right">

			{#<div class="col-xs-12 col-sm-9">#}
				<p class="pull-right visible-xs">
					<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
				</p>

				<div class="row">
					<div class="col-xs-6 col-lg-4">
						<div class="panel panel-default">
							<div class="panel-heading">


								<div class="btn-group pull-right">
									<div class="dropdown"   >
										<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown"  aria-expanded="true">
											Kategoria
											<span class="caret"></span>
										</button>
										<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
											{% for category in collectionCategories %}
												<li role="presentation"><a role="menuitem" tabindex="{{ loop.index }}" href="">{{ category }}</a></li>
											{% endfor %}
										</ul>
									</div>
								</div>
								<h4>Wszytkie</h4>

							</div>
							<div class="panel-body">
								<ul class="media-list">
									{% for item in allMovies %}
										<li >
											<div class="alert alert-warning" role="alert">
												<div class="media-left">
													<a href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">
														<img class="media-object" width="60" height="90" src="{{ item.cover }}" alt="...">
													</a>
												</div>
												<div class="media-body" style="vertical-align: middle;">
													<a class="navbar-brand" style="text-align: center; width: 100%; color: #000000"  href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">{{ item.title }}</a>
												</div>
											</div>

										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div><!--/.col-xs-6.col-lg-4-->



					<div class="col-xs-6 col-lg-4">
						<div class="panel panel-default">
							<div class="panel-heading">
								<div class="btn-group pull-right">
									<div class="dropdown"   >
										<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
											Kategoria
											<span class="caret"></span>
										</button>
										<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
											{% for category in collectionCategories %}
											<li role="presentation"><a role="menuitem" tabindex="1" href="">{{ category }}</a></li>
											{% endfor %}
										</ul>
									</div>
								</div>
								<h4>Najpopularniejsze</h4>
							</div>
							<div class="panel-body">
								<ul class="media-list">
									{% for item in mostPopularMovies %}
										<li>
											<div class="alert alert-success" role="alert">
												<div class="media-left">
													<a href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">
														<img class="media-object" width="60" height="90" src="{{ item.cover }}" alt="...">
													</a>
												</div>
												<div class="media-body" style="vertical-align: middle;">
													<a class="navbar-brand" style="text-align: center; width: 100%; color: #000000"  href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">
														{{ item.title }}
														<span class="badge">
															{{ item.numberOfSales }}
														</span>
													</a>
												</div>
											</div>

										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div><!--/.col-xs-6.col-lg-4-->


					<div class="col-xs-6 col-lg-4">
						<div class="panel panel-default">
							<div class="panel-heading">
								<div class="btn-group pull-right">
									<div class="dropdown"   >
										<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
											Kategoria
											<span class="caret"></span>
										</button>
										<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
											{% for category in collectionCategories %}
												<li role="presentation"><a role="menuitem" tabindex="1" href="">{{ category }}</a></li>
											{% endfor %}
										</ul>
									</div>
								</div>
								<h4>Najczęściej recenzowane</h4>
							</div>
							<div class="panel-body">
								<ul class="media-list">
									{% for item in mostReviewMovies %}
										<li>
											<div class="alert alert-info" role="alert">
												<div class="media-left">
													<a href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">
														<img class="media-object" width="60" height="90" src="{{ item.cover }}" alt="...">
													</a>
												</div>
												<div class="media-body" style="vertical-align: middle;">
													<a class="navbar-brand" style="text-align: center; width: 100%; color: #000000"  href="{{ path('shop_main_movies_details', { 'id': item.id }) }}">
														{{ item.title }}
														<span class="badge">
															{{ item.getReviewsCount }}
														</span>
													</a>
												</div>
											</div>

										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div><!--/.col-xs-6.col-lg-4-->


				</div><!--/row-->
			</div><!--/.col-xs-12.col-sm-9-->

			{#</div><!--/.sidebar-offcanvas-->#}
		</div><!--/row-->

		<hr>


	</div><!--/.container-->
	{#$('.dropdown-toggle').dropdown()#}
{% endblock %}

