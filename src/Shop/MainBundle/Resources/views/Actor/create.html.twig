{% extends 'ShopMainBundle::layout.html.twig' %}

{% block content %}
	<h1 class="col-md-offset-5 col-centered">Dodawanie Aktora!</h1>
	<form method="POST">
		{{ form_row(form._token) }}
		{#{{ form_row(form) }}#}
		{#{{ form_row(form.lastName)}}#}
		<br/><table border="0" class="col-md-offset-5 col-centered">
			<tr/>
		<div >
			<td ><label for="shop_mainbundle_actor_firstName">Imię:</label></td>
			</td><td><input type="text" id="shop_mainbundle_actor_firstName" name="shop_mainbundle_actor[firstName]" required="required" maxlength="255" >
		</div>
			</tr>
			<tr><td>&nbsp</td></tr>
			<tr>
		<div >
			<td><label for="shop_mainbundle_actor_lastName" >Nazwisko:&nbsp‏</label></td>

			<td><input type="text" id="shop_mainbundle_actor_lastName" name="shop_mainbundle_actor[lastName]" required="required" maxlength="255" >
			</td>
		</div>
			</tr>
		</table><br />
		{#{{  form_errors ( form )  }}#}
		<button class="col-md-offset-6 col-centered" type="submit">Dodaj Aktora</button>

		{% for flashMessage in app.session.flashbag.get('notice') %}
		<div class="flash-notice" class="alert alert-info">
			<button class="close" data-dismiss="alert">times</button>
			{{ flashMessage }}
		</div>
		{% endfor %}

	</form>
{% endblock %}