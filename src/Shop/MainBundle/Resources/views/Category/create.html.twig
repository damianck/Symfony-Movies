{% extends 'ShopMainBundle::layout.html.twig' %}

{% block content %}
	<div class="container">
	<div class="row">
		<div class="span12">
			<div class="" id="loginModal">
				<div class="modal-header">
					<h3>Dodawanie kategorii</h3>
				</div>
				<div class="modal-body">
					<div class="well">
						<div class="tab-pane active in" id="register">
							<form id="tab" class="form-horizontal"  method="POST" >
								{{ form_row(form._token) }}
								<br>

								<div class="form-group">
									<label class="control-label col-sm-2" for="shop_mainbundle_category_name">Nazwa kategorii:</label>
									<div class="col-sm-10">
										<input class="form-control" type="text" id="shop_mainbundle_category_name" name="shop_mainbundle_category[name]" required="required" maxlength="255" pattern=".{3,}" placeholder="Nazwa kategorii">
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<button class="btn btn-default" type="submit">Dodaj KategoriÄ™</button>
										{% for flashMessage in app.session.flashbag.get('notice') %}
											<div class="flash-notice" class="alert alert-info">
												<button class="close" data-dismiss="alert" >times</button>
												{{ flashMessage }}
											</div>
										{% endfor %}
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}