{% extends 'ShopMainBundle::layout.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading"><h4>Szczegóły filmu </h4></div>
        <div class="panel-body">
            <a href="{{ path('shop_main_movies') }}" class="btn btn-primary" role="button">Powrót</a>
        </div>
        {#<!-- Table -->#}
        <table   class="table table-striped table-bordered"   >
            <tr>
                {#<td><b>No.</b></td>#}
                <td><b>Tytuł</b></td>
                <td><b>Liczba sprzedaży</b></td>
                {# sypie oto blad <td><b>Liczba recenzji</b></td>#}
                <td><b>Opis</b></td>
                <td><b>Cena</b></td>
                <td><b>Cover</b></td>
                <td><b>Stream</b></td>
                <td><b>Kategoria</b></td>
                <td><b>Aktor</b></td>
            </tr>
            {#<!-- wyswietlanie po id ?? -->#}
            {{ movies }}
            {% for item in movies %}
                <tr>
                    {#<td style="width: 70px">{{ loop.index }}</td>#}
                    {#<!-- Tablica movie -->#}
                    <td>{{ item.title }}</td>
                    <td>{{ item.numberOfSales }}</td>
                    {# sypie oto blad <td>{{ item.numberOfReviews }}</td>#}
                    <td>{{ item.description }}</td>
                    <td>{{ item.price }}</td>
                    <td>{{ item.cover }}</td>
                    <td>{{ item.stream }}</td>
                    {#<!-- category movie -->#}
                    <td>
                        <lu class="list list-unstyled">
                            {% for cat in item.categories %}
                              <li>{{ cat }}</li>
                            {% endfor %}
                        </lu>
                    </td>
                    {#<!-- actors -->#}
                    <td>
                        <lu class="list list-unstyled">
                            {% for cat in item.actors %}
                                <li>{{ cat }}</li>
                            {% endfor %}
                        </lu>
                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>
{% endblock %}
