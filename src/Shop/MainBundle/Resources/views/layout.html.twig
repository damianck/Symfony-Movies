{% set SRC%}{{ asset('bundles/shopmain/') }}{% endset %}
<!DOCTYPE html>
<html lang="pl" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="Marcin Zgoda, Damian Wtorek, Krzysztof Sarota">

		<title>{% block title %}{% endblock %}</title>

		{% block stylesheets %}
			<link href="{{ SRC }}/css/bootstrap.min.css" rel="stylesheet">
			<link href="{{ SRC }}/css/1-col-portfolio.css" rel="stylesheet">
		{% endblock %}

	</head>
	<body >
		<div class="container">
			<div class="row row-offcanvas row-offcanvas-right">

					{% block navigation %}
						{% include 'ShopMainBundle::navigation.html.twig' %}
					{% endblock %}

					</br></br></br></br>


					<header>

						<div class="jumbotron">
							<h1>Witaj!</h1>
							<p>Tylko u nas możesz wypożyczyć interesujące filmy bez wychodzenia z domu.</p>
						</div>
					</header>

					<section>
						{% block content %}

						{% endblock %}
					</section>

			</div>
		</div>
		<br /><br /><br /><br /><br />
		<footer class="panel-footer" style="position: fixed; bottom: 0; width: 100%; clear: both;">
			<p class="pager">
				Projekt zaliczeniowy przedmiotu "Pracownia Programowanie 5" <br>
				Autorzy:
				<b> Marcin Zgoda, Damian Wtorek, Krzysztof Sarota.</b>
			</p>
		</footer>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
		<script src="{{ asset('bundles/shopmain/js/bootstrap.js') }}"></script>
	</body>
</html>
